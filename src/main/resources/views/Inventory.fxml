<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tienda.controller.InventoryController"
            prefWidth="1000" prefHeight="700">

    <!-- TOP -->
    <top>
        <HBox spacing="20">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button fx:id="btnBack" text="Volver" 
                        onAction="#handleBack" 
                        styleClass="back-button"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Inventario de Productos"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="tableInventory" prefWidth="900" prefHeight="550">

                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                    <TableColumn fx:id="colName" text="Producto" prefWidth="200"/>
                    <TableColumn fx:id="colCategory" text="CategorÃ­a" prefWidth="150"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
                    <TableColumn fx:id="colCost" text="Costo" prefWidth="100"/>
                    <TableColumn fx:id="colPrice" text="Precio" prefWidth="100"/>
                    <TableColumn fx:id="colTotalCost" text="Total Costo" prefWidth="110"/>
                    <TableColumn fx:id="colTotalValue" text="Total Valor" prefWidth="110"/>
                    <TableColumn fx:id="colProfit" text="Utilidad" prefWidth="100"/>
                </columns>

                <placeholder>
                    <Label text="No hay productos disponibles"/>
                </placeholder>

            </TableView>
        </VBox>
    </center>

</BorderPane>
