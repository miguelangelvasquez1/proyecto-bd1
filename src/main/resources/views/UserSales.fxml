<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tienda.controller.UserSalesController"
            prefHeight="750.0" prefWidth="1000.0"
            styleClass="main-container">

    <!-- Header -->
    <top>
        <VBox spacing="15" styleClass="header">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <!-- BotÃ³n Volver y TÃ­tulo -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="btnBack" text="â† Volver" 
                        onAction="#handleBack" 
                        styleClass="back-button"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Label text="Ventas por Usuario" styleClass="title">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                </Label>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button fx:id="btnRefresh" text="ðŸ”„ Actualizar" 
                        onAction="#handleRefresh" 
                        styleClass="refresh-button"/>
            </HBox>

            <Separator/>

            <!-- Filtros de fecha -->
            <VBox spacing="10">
                <Label text="Filtrar por Periodo" styleClass="section-label">
                    <font>
                        <Font name="System Bold" size="16"/>
                    </font>
                </Label>
                
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Fecha Inicial:">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                    <DatePicker fx:id="datePickerStart" 
                               promptText="Seleccione fecha inicial"
                               prefWidth="150"
                               styleClass="date-picker"/>
                    
                    <Label text="Fecha Final:">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                    <DatePicker fx:id="datePickerEnd" 
                               promptText="Seleccione fecha final"
                               prefWidth="150"
                               styleClass="date-picker"/>
                    
                    <Button fx:id="btnFilter" text="ðŸ” Filtrar" 
                            onAction="#handleFilter"
                            styleClass="filter-button"/>
                    
                    <Button fx:id="btnClearFilter" text="âœ– Limpiar" 
                            onAction="#handleClearFilter"
                            styleClass="clear-filter-button"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- EstadÃ­sticas -->
            <HBox spacing="30" alignment="CENTER">
                <VBox spacing="5" alignment="CENTER" styleClass="stat-box">
                    <Label text="Total Usuarios" styleClass="stat-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblTotalUsers" text="0" styleClass="stat-value">
                        <font>
                            <Font name="System Bold" size="20"/>
                        </font>
                    </Label>
                </VBox>

                <Separator orientation="VERTICAL"/>

                <VBox spacing="5" alignment="CENTER" styleClass="stat-box">
                    <Label text="Total Ventas" styleClass="stat-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblTotalSales" text="0" styleClass="stat-value">
                        <font>
                            <Font name="System Bold" size="20"/>
                        </font>
                    </Label>
                </VBox>

                <Separator orientation="VERTICAL"/>

                <VBox spacing="5" alignment="CENTER" styleClass="stat-box">
                    <Label text="Ventas Contado" styleClass="stat-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblCountSales" text="0" styleClass="stat-value-count">
                        <font>
                            <Font name="System Bold" size="20"/>
                        </font>
                    </Label>
                </VBox>

                <Separator orientation="VERTICAL"/>

                <VBox spacing="5" alignment="CENTER" styleClass="stat-box">
                    <Label text="Ventas CrÃ©dito" styleClass="stat-label">
                        <font>
                            <Font size="12"/>
                        </font>
                    </Label>
                    <Label fx:id="lblCreditSales" text="0" styleClass="stat-value-credit">
                        <font>
                            <Font name="System Bold" size="20"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Tabla de Ventas por Usuario -->
    <center>
        <VBox spacing="10" styleClass="content">
            <padding>
                <Insets top="10" right="30" bottom="20" left="30"/>
            </padding>

            <Label text="Ranking de Vendedores" styleClass="section-title">
                <font>
                    <Font name="System Bold" size="16"/>
                </font>
            </Label>

            <TableView fx:id="tableUserSales" VBox.vgrow="ALWAYS" styleClass="user-sales-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80" styleClass="table-column"/>
                    <TableColumn fx:id="colName" text="Nombre" prefWidth="300" styleClass="table-column"/>
                    <TableColumn fx:id="colTotalSales" text="Total Ventas" prefWidth="150" styleClass="table-column"/>
                </columns>
                
                <placeholder>
                    <Label text="No hay datos de ventas disponibles" styleClass="placeholder-label">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                </placeholder>
            </TableView>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="footer">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>
            
            <Label fx:id="lblPeriodInfo" text="ðŸ“Š Mostrando todas las ventas" 
                   styleClass="info-label">
                <font>
                    <Font size="12"/>
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>